                            <Label Content="State" Grid.Row="4" Grid.Column="0" Height="28" HorizontalAlignment="Left"  Name="lblClientAutoState" VerticalAlignment="Top" />
                            <TextBox Height="23" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Left"  Name="txtClientAutoState" VerticalAlignment="Top" Width="120" />
