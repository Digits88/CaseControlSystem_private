                                <Button Grid.Row="0" Grid.Column="1" Content="Cancel" Height="25" Width="75" Margin="0,0,0,0" HorizontalAlignment="Center" Name="btnCancelClientAutoInfo" Click="btnCancelClientAutoInfo_Click" />
                                <Button Grid.Row="0" Grid.Column="2" Content="Save" Height="25" Width="75" Margin="0,0,0,0" HorizontalAlignment="Center" Name="btnSaveClientAutoInfo" Click="btnSaveClientAutoInfo_Click" />
                            </Grid>

                            <Label Content="Insurance Company" Grid.Row="1" Grid.Column="0" Height="28" HorizontalAlignment="Left"  Name="lblInsuranceCompany" VerticalAlignment="Top" />
                            <TextBox Height="23" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left"  Name="txtClientAutoInsuranceCompany" VerticalAlignment="Top" Width="120" />
                            <Label Content="Address" Grid.Row="2" Grid.Column="0" Height="28" HorizontalAlignment="Left"  Name="lblClientAutoAddress" VerticalAlignment="Top" />
                            <TextBox Height="23" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left"  Name="txtClientAutoAddress" VerticalAlignment="Top" Width="120" />
                            <Label Content="City" Grid.Row="3" Grid.Column="0" Height="28" HorizontalAlignment="Left"  Name="lblClientAutoCity" VerticalAlignment="Top" />
