<Window x:Class="CaseControl.ClientInformation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Client Information" WindowState="Maximized" 
        mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" Height="920" Width="1250" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen">

    <Window.Background>
        <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
            <GradientStop Color="#FFD3D3F4" Offset="0" />
            <GradientStop Color="White" Offset="1" />
        </LinearGradientBrush>
    </Window.Background>
    <DockPanel>
        <Grid DockPanel.Dock="Left" Width="300" HorizontalAlignment="Left" >
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="3*" />
            </Grid.RowDefinitions>
            <Button Grid.Row="0" Grid.Column="0" Content="Refresh"  Width="75" Name="btnRefresh" Click="btnRefresh_Click" />
            <TextBox Grid.Row="1" Text="Search"  Name="txtSearch" TextChanged="txtSearch_TextChanged" GotFocus="txtSearch_GotFocus" LostFocus="txtSearch_LostFocus"></TextBox>
            <DataGrid AutoGenerateColumns="False" Grid.Row="2" Height="430" HorizontalAlignment="Left" Margin="0,5,0,0" Name="dgClientFileList" VerticalAlignment="Top" Width="290" SelectionChanged="dgClientFileList_SelectionChanged" ItemsSource="{Binding}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="First Name" Binding="{Binding FirstName}" ></DataGridTextColumn>
                    <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" SortDirection="Descending"></DataGridTextColumn>
                    <DataGridTextColumn Header="File No." Binding="{Binding FileID}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
            <ComboBox Grid.Row="3" Height="23" HorizontalAlignment="Left" Margin="129,9,0,0" Name="cmbActivityFilter" VerticalAlignment="Top" Width="120" SelectionChanged="cmbActivityFilter_SelectionChanged" SelectedIndex="0">
                <ComboBoxItem Content="Active" IsSelected="True" />
                <ComboBoxItem Content="All" />
                <ComboBoxItem Content="Inactive" />
            </ComboBox>
            <Label Content="Filter clients by Status:" Grid.Row="3" Height="28" HorizontalAlignment="Left" Margin="6,10,0,0" Name="label2" VerticalAlignment="Top" />
        </Grid>
        <Grid DockPanel.Dock="Top" Height="30" VerticalAlignment="Top" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Row="1" Grid.Column="0" Content="Home" Margin="10,0,0,0" Width="75" Name="btnHome" Click="btnHome_Click" />
            <Button Grid.Row="1" Grid.Column="1" Content="Add Client" Margin="10,0,0,0" Width="75" Name="btnAddNewClient" Click="btnAddNewClient_Click" />
            <!--<Button Grid.Row="1" Grid.Column="2" Content="Edit Client" Width="75" Margin="10,0,0,0" Name="btnEditClient" Click="btnEditClient_Click" />-->
            <Button Grid.Row="1" Grid.Column="3" Content="Cancel" Margin="10,0,0,0" Width="75" Name="btnCancelEdit" Click="btnCancelEdit_Click" />
            <Button Grid.Row="1" Grid.Column="4" Content="Save" Margin="10,0,0,0" Name="btnSaveClient" Width="75" Click="btnSaveClient_Click"  />
            <Button Grid.Row="1" Grid.Column="5" Content="Close Client" Margin="10,0,0,0" Name="btnCloseClient" Width="75" Click="btnCloseClient_Click" />
            <Button Grid.Row="1" Grid.Column="6" Content="Re-Activate Closed Client" Width="150" Margin="10,0,0,0" Name="btnReactivateClient" Click="btnReactivateClient_Click" />
            <Button Grid.Row="1" Grid.Column="7" Content="Expand All" Margin="10,0,0,0" Click="btnExpandCollapse_Click" Width="75" Name="btnExpandCollapse" />
            <Button Grid.Row="1" Grid.Column="8" Content="Billing" Margin="10,0,0,0" Width="75" Name="btnClientBilling" Click="btnClientBilling_Click" />
            <Button Grid.Row="1" Grid.Column="9" Content="Reports" Margin="10,0,0,0"  Width="75" Name="btnClientReports" Click="btnClientReports_Click" />
            <Button Grid.Row="1" Grid.Column="10" Content="Close" Margin="10,0,0,0" Width="75" Name="btnClose" Click="btnClose_Click" />
        </Grid>
        <ScrollViewer Margin="0,20,0,0">
            <DockPanel>
                <Grid DockPanel.Dock="Top" Height="334">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="4*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="86" />
                        <ColumnDefinition Width="167" />
                        <ColumnDefinition Width="83" />
                        <ColumnDefinition Width="143" />
                        <ColumnDefinition Width="129" />
                        <ColumnDefinition Width="176" />
                        <ColumnDefinition Width="128*" />
                    </Grid.ColumnDefinitions>

                    <Label Content="General Section" FontWeight="Bold" FontSize="13" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="6" Height="28" HorizontalAlignment="Left"  Name="label1" VerticalAlignment="Top" />
                    <Grid Grid.ColumnSpan="3" Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Row="0" Grid.Column="0" Content="Edit Section" Height="25" Width="75" Margin="0,0,0,0" HorizontalAlignment="Center" Name="btnEditGeneralClient" Click="btnEditGeneralClient_Click" Foreground="#FFFFFFFF" Template="{DynamicResource GlassButton}" />
                        <Button Grid.Row="0" Grid.Column="1" Content="Cancel" Height="25" Width="75" Margin="0,0,0,0" HorizontalAlignment="Center" Name="btnCancelEditGeneralClient" Click="btnCancelEditGeneralClient_Click" Foreground="#FFFFFFFF" Template="{DynamicResource GlassButton}"/>
                        <Button Grid.Row="0" Grid.Column="2" Content="Save" Height="25" Width="75" Margin="0,0,0,0" HorizontalAlignment="Left" Name="btnSaveEditGeneralClient" Click="btnSaveEditGeneralClient_Click" />
                    </Grid>

                    <Label Content="File No." Grid.Row="2" Grid.Column="0" Height="28" HorizontalAlignment="Left"  Name="label10" VerticalAlignment="Top" />
                    <TextBox Style="{StaticResource textBoxNormalStyle}" Height="23" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="1" Name="txtFileNo" VerticalAlignment="Top" Width="120"  LostFocus="txtFileNo_LostFocus" />
                    <Label Content="Last Name" Height="28"  HorizontalAlignment="Left" Grid.Row="3" Grid.Column="0" Name="label11" VerticalAlignment="Top" />
                    <TextBox Style="{StaticResource textBoxNormalStyle}" Height="23" HorizontalAlignment="Left" Grid.Row="3" Grid.Column="1" Name="txtLastName" VerticalAlignment="Top" Width="120" LostFocus="txtLastName_LostFocus" />
                    <Label Content="First Name" Height="28" HorizontalAlignment="Left" Grid.Row="4" Grid.Column="0" Name="label12" VerticalAlignment="Top" />
                    <TextBox Style="{StaticResource textBoxNormalStyle}" Height="23" HorizontalAlignment="Left" Grid.Row="4" Grid.Column="1" Name="txtFirstName" VerticalAlignment="Top" Width="120" LostFocus="txtFirstName_LostFocus" />
                    <Label Content="Case Type" Height="28" HorizontalAlignment="Left" Grid.Row="5" Grid.Column="0" Name="label13" VerticalAlignment="Top" />
                    <ComboBox Height="23" HorizontalAlignment="Left" Grid.Row="5" Grid.Column="1" Name="cmbCaseType" VerticalAlignment="Top" Width="120" Background="White"></ComboBox>
                    <Label Content="Other Type" Height="28" HorizontalAlignment="Left" Grid.Row="6" Grid.Column="0" Name="label14" VerticalAlignment="Top" />
                    <TextBox Height="23" HorizontalAlignment="Left" Grid.Row="6" Grid.Column="1" Name="txtOtherCaseType" VerticalAlignment="Top" Width="120" />
                    <Label Content="Case Status" Height="28" HorizontalAlignment="Left" Grid.Row="7" Grid.Column="0" Name="label15" VerticalAlignment="Top" />
                    <ComboBox Height="23" HorizontalAlignment="Left" Grid.Row="7" Grid.Column="1" Name="cmbCaseStatus" VerticalAlignment="Top" Width="120" >
                    </ComboBox>
                    <Label Content="Accident Date" Height="28" HorizontalAlignment="Left" Grid.Row="8" Grid.Column="0" Name="label16" VerticalAlignment="Top" />
                    <DatePicker Height="25" HorizontalAlignment="Left" Grid.Row="8" Grid.Column="1" Name="dtAccidentDate" VerticalAlignment="Top" Width="120" SelectedDateChanged="dtAccidentDate_SelectedDateChanged" />
                    <Label Content="Client Created" Height="28" HorizontalAlignment="Left" Grid.Row="9" Grid.Column="0" Name="lblClientCreatedCaption" VerticalAlignment="Top" />
                    <TextBox Height="23" HorizontalAlignment="Left" Grid.Row="9" Grid.Column="1" Name="txtClientCreated"  VerticalAlignment="Top" Width="120" />
                    <Label Content="Email" Height="28" HorizontalAlignment="Left" Grid.Row="10" Grid.Column="0" Name="lblEmail" VerticalAlignment="Top" />
                    <TextBox Height="23" HorizontalAlignment="Left" Grid.Row="10" Grid.Column="1" Name="txtEmail"  VerticalAlignment="Top" Width="120" />
                    <Label Content="Address" Grid.Row="2" Grid.Column="2" Height="28" HorizontalAlignment="Left"  Name="label17" VerticalAlignment="Top" />
                    <TextBox Height="23" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="3" Name="txtAddress" VerticalAlignment="Top" Width="120" />
                    <Label Content="Suite/Apt No." Grid.Row="3" Grid.Column="2" Height="28" HorizontalAlignment="Left"  Name="lblSuit" VerticalAlignment="Top" />
                    <TextBox Height="23" HorizontalAlignment="Left" Grid.Row="3" Grid.Column="3" Name="txtSuiteAddress" VerticalAlignment="Top" Width="120" />
                    <Label Content="City" Grid.Row="4" Grid.Column="2" Height="28" HorizontalAlignment="Left"  Name="label18" VerticalAlignment="Top" />
                    <TextBox Height="23" HorizontalAlignment="Left" Grid.Row="4" Grid.Column="3" Name="txtCity" VerticalAlignment="Top" Width="120" />
                    <Label Content="State" Grid.Row="5" Grid.Column="2" Height="28" HorizontalAlignment="Left"  Name="label19" VerticalAlignment="Top" />
                    <TextBox Height="23" HorizontalAlignment="Left" Grid.Row="5" Grid.Column="3" Name="txtState" VerticalAlignment="Top" Width="120" />
                    <Label Content="Home Phone" Grid.Row="6" Grid.Column="2" Height="28" HorizontalAlignment="Left"  Name="label20" VerticalAlignment="Top" />
                    <TextBox Height="23" HorizontalAlignment="Left" Grid.Row="6" Grid.Column="3" Name="txtHomePhone" VerticalAlignment="Top" Width="120" />
                    <Label Content="Cell Phone" Grid.Row="7" Grid.Column="2" Height="28" HorizontalAlignment="Left"  Name="label21" VerticalAlignment="Top" />
                    <TextBox Height="23" HorizontalAlignment="Left" Grid.Row="7" Grid.Column="3" Name="txtCellPhone" VerticalAlignment="Top" Width="120" />
                    <Label Content="Work Phone" Grid.Row="8" Grid.Column="1" Height="28" HorizontalAlignment="Left"  Name="lblWorkPhone" VerticalAlignment="Top" Grid.ColumnSpan="2" Margin="166,0,0,0" />
                    <TextBox Height="23" HorizontalAlignment="Left" Grid.Row="8" Grid.Column="3" Name="txtWorkPhone" VerticalAlignment="Top" Width="120" />
                    <Label Content="Driving License" Grid.Row="9" Grid.Column="2" Height="28" HorizontalAlignment="Left"  Name="label22" VerticalAlignment="Top" />
                    <TextBox Height="23" HorizontalAlignment="Left" Grid.Row="9" Grid.Column="3" Name="txtDrivingLicense" VerticalAlignment="Top" Width="120" />
                    <Label Content="Date Of Birth" Grid.Row="10" Grid.Column="2" Height="28" HorizontalAlignment="Left"  Name="label23" VerticalAlignment="Top" />
                    <DatePicker Height="25" HorizontalAlignment="Left" Grid.Row="10" Grid.Column="3" Name="dtDateOfBirth" VerticalAlignment="Top" Width="120" />
                    <Label Content="SSN" Grid.Row="10" Grid.Column="4" Height="28" HorizontalAlignment="Left"  Name="label24" VerticalAlignment="Top" />
                    <TextBox Height="23" HorizontalAlignment="Left" Grid.Row="10" Grid.Column="5" Name="txtSSN" VerticalAlignment="Top" Width="120" />
                    <Label Content="Intial Case Information" Grid.Row="2" Grid.Column="4" Height="28" HorizontalAlignment="Left"  Name="label25" VerticalAlignment="Top" />
                    <TextBox Height="23" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="5" Name="txtInitialCaseInformation" VerticalAlignment="Top" Width="120" />
                    <Label Content="Defendant Name" Grid.Row="3" Grid.Column="4" Height="28" HorizontalAlignment="Left"  Name="label26" VerticalAlignment="Top" />
                    <TextBox Height="23" HorizontalAlignment="Left" Grid.Row="3" Grid.Column="5" Name="txtDefendantName" VerticalAlignment="Top" Width="120" />
                    <Label Content="Evidence 1" Grid.Row="4" Grid.Column="4" Height="28" HorizontalAlignment="Left"  Name="label27" VerticalAlignment="Top" />
                    <TextBox Height="23" HorizontalAlignment="Left" Grid.Row="4" Grid.Column="5" Name="txtEvidence1" VerticalAlignment="Top" Width="120" />
                    <Label Content="Evidence 2" Grid.Row="5" Grid.Column="4" Height="28" HorizontalAlignment="Left"  Name="label28" VerticalAlignment="Top" />
                    <TextBox Height="23" HorizontalAlignment="Left" Grid.Row="5" Grid.Column="5" Name="txtEvidence2" VerticalAlignment="Top" Width="120" />
                    <Button Content="View All Evidence" Grid.Row="6" Grid.Column="5" Height="25" HorizontalAlignment="Left" IsEnabled="False" Name="btnViewAllEvidence" VerticalAlignment="Top" Width="122" Click="btnViewAllEvidence_Click" />
                    <Label Content="Originating Attorney" Grid.Row="7" Grid.Column="4" Height="28" HorizontalAlignment="Left"  Name="label29" VerticalAlignment="Top" />
                    <TextBox Height="23" HorizontalAlignment="Left" Grid.Row="7" Grid.Column="5" Name="txtOriginatingAttorney" VerticalAlignment="Top" Width="120" />
                    <Label Content="Assigned Attorney" Grid.Row="8" Grid.Column="4" Height="28" HorizontalAlignment="Left"  Name="label30" VerticalAlignment="Top" />
                    <TextBox Style="{StaticResource textBoxNormalStyle}" Height="23" HorizontalAlignment="Left" Grid.Row="8" Grid.Column="5" Name="txtAssignedAttorney" VerticalAlignment="Top" Width="120" LostFocus="txtAssignedAttorney_LostFocus" />
                    <Label Content="Refferal" Grid.Row="9" Grid.Column="4" Height="28" HorizontalAlignment="Left"  Name="label31" VerticalAlignment="Top" />
                    <TextBox Height="23" HorizontalAlignment="Left" Grid.Row="9" Grid.Column="5" Name="txtRefferal" VerticalAlignment="Top" Width="120" />
                </Grid>
                <Expander Margin="0,10,0,0" Header="Additional Client Information" DockPanel.Dock="Top" 
                          VerticalAlignment="Top"  Name="exdAdditionalClientInformation"  
                          FontWeight="Bold" FontSize="13" 
                          Expanded="exdAdditionalClientInformation_Expanded">
                    <Grid Height="270" VerticalAlignment="Top">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="95" />
                            <ColumnDefinition Width="129" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>
                        <Grid Grid.ColumnSpan="3">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Row="0" Grid.Column="0" Content="Edit Section" Height="25" Width="75" Margin="0,0,0,0" HorizontalAlignment="Center" Name="btnEditAdditionalClientInfo" Click="btnEditAdditionalClientInfo_Click" />
                            <Button Grid.Row="0" Grid.Column="1" Content="Cancel" Height="25" Width="75" Margin="0,0,0,0" HorizontalAlignment="Center" Name="btnCancelAdditionalClientInfo" Click="btnCancelAdditionalClientInfo_Click" />
                            <Button Grid.Row="0" Grid.Column="2" Content="Save" Height="25" Width="75" Margin="0,0,0,0" HorizontalAlignment="Center" Name="btnSaveAdditionalClientInfo" Click="btnSaveAdditionalClientInfo_Click" />
                        </Grid>
                        <Label Content="Client Occupation" Grid.Row="1" Grid.Column="0" Height="28" HorizontalAlignment="Left"  Name="lblClientOccupation" VerticalAlignment="Top" />
                        <TextBox Height="23" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left"  Name="txtClientOccupation" VerticalAlignment="Top" Width="120" />
                        <Label Content="Employer" Grid.Row="2" Grid.Column="0" Height="28" HorizontalAlignment="Left"  Name="lblEmployer" VerticalAlignment="Top" />
                        <TextBox Height="23" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left"  Name="txtEmployer" VerticalAlignment="Top" Width="120" />
                        <Label Content="Address" Grid.Row="3" Grid.Column="0" Height="28" HorizontalAlignment="Left"  Name="lblAddress" VerticalAlignment="Top" />
                        <TextBox Height="23" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left"  Name="txtClientEmployerAddress" VerticalAlignment="Top" Width="120" />
                        <Label Content="City" Grid.Row="4" Grid.Column="0" Height="28" HorizontalAlignment="Left"  Name="lblCity" VerticalAlignment="Top" />
                        <TextBox Height="23" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Left"  Name="txtClientEmployerCity" VerticalAlignment="Top" Width="120" />
                        <Label Content="State" Grid.Row="5" Grid.Column="0" Height="28" HorizontalAlignment="Left"  Name="lblState" VerticalAlignment="Top" />
                        <TextBox Height="23" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Left"  Name="txtClientEmployerState" VerticalAlignment="Top" Width="120" />
                        <Expander Header="Spouse Information" Grid.Row="1" Grid.Column="2" Name="exdSpouseInfo"  Grid.RowSpan="8" FontWeight="Bold" FontSize="13">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="95" />
                                    <ColumnDefinition Width="129" />
                                </Grid.ColumnDefinitions>
                                <Label Content="Last Name" Grid.Row="0" Grid.Column="0" Height="28" HorizontalAlignment="Left"  Name="lblSpouseLastName" VerticalAlignment="Top" />
                                <TextBox Height="23" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left"  Name="txtClientSpousLastName" VerticalAlignment="Top" Width="120" />
                                <Label Content="First Name" Grid.Row="1" Grid.Column="0" Height="28" HorizontalAlignment="Left"  Name="lblSpouseFirstName" VerticalAlignment="Top" />
                                <TextBox Height="23" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left"  Name="txtClientSpousFirstName" VerticalAlignment="Top" Width="120" />
                                <Label Content="Spouse Occupation" Grid.Row="2" Grid.Column="0" Height="28" HorizontalAlignment="Left"  Name="lblClientSpousOccupation" VerticalAlignment="Top" />
                                <TextBox Height="23" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left"  Name="txtClientSpousOccupation" VerticalAlignment="Top" Width="120" />
                                <Label Content="Employer" Grid.Row="3" Grid.Column="0" Height="28" HorizontalAlignment="Left"  Name="lblSpouseEmployer" VerticalAlignment="Top" />
                                <TextBox Height="23" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left"  Name="txtSpouseEmployer" VerticalAlignment="Top" Width="120" />
                                <Label Content="Address" Grid.Row="4" Grid.Column="0" Height="28" HorizontalAlignment="Left"  Name="lblSpouseAddress" VerticalAlignment="Top" />
                                <TextBox Height="23" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Left"  Name="txtClientSpouseEmployerAddress" VerticalAlignment="Top" Width="120" />
                                <Label Content="City" Grid.Row="5" Grid.Column="0" Height="28" HorizontalAlignment="Left"  Name="lblSpouseCity" VerticalAlignment="Top" />
                                <TextBox Height="23" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Left"  Name="txtClientSpouseEmployerCity" VerticalAlignment="Top" Width="120" />
                                <Label Content="State" Grid.Row="6" Grid.Column="0" Height="28" HorizontalAlignment="Left"  Name="lblSpouseState" VerticalAlignment="Top" />
                                <TextBox Height="23" Grid.Row="6" Grid.Column="1" HorizontalAlignment="Left"  Name="txtClientSpouseEmployerState" VerticalAlignment="Top" Width="120" />
                            </Grid>
                        </Expander>
                    </Grid>
                </Expander>
                <Expander Margin="0,10,0,0" Header="Client Auto Information" DockPanel.Dock="Top"  Name="exdClientAutoInformation" FontWeight="Bold" FontSize="13">
                    <Grid >
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="110" />
                                <ColumnDefinition Width="167" />
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="143" />
                            </Grid.ColumnDefinitions>
                            <Grid Grid.ColumnSpan="3">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>
