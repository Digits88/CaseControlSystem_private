                            <TextBox Height="23" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Left"  Name="txtClientAutoZip" VerticalAlignment="Top" Width="120" />
                            <Label Content="Phone Number" Grid.Row="6" Grid.Column="0" Height="28" HorizontalAlignment="Left"  Name="lblClientAutoPhoneNumber" VerticalAlignment="Top" />
                            <TextBox Height="23" Grid.Row="6" Grid.Column="1" HorizontalAlignment="Left"  Name="txtClientAutoPhoneNumber" VerticalAlignment="Top" Width="120" />
                            <Label Content="Adjuster" Grid.Row="7" Grid.Column="0" Height="28" HorizontalAlignment="Left"  Name="lblClientAutoAdjuster" VerticalAlignment="Top" />
                            <TextBox Height="23" Grid.Row="7" Grid.Column="1" HorizontalAlignment="Left"  Name="txtClientAutoAdjuster" VerticalAlignment="Top" Width="120" />
                            <Label Content="Policy Number" Grid.Row="1" Grid.Column="2" Height="28" HorizontalAlignment="Left"  Name="lblPolicyNumber" VerticalAlignment="Top" />
                            <TextBox Height="23" HorizontalAlignment="Left" Grid.Row="1" Grid.Column="3" Name="txtPolicyNumber" VerticalAlignment="Top" Width="120" />
                            <Label Content="Effective Start Date" Grid.Row="2" Grid.Column="2" Height="28" HorizontalAlignment="Left"  Name="lblEffectiveStartDate" VerticalAlignment="Top" />
                            <DatePicker Height="25" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="4" Name="dtEffectiveStartDate" VerticalAlignment="Top" Width="120" />
                            <Label Content="Effective End Date" Grid.Row="3" Grid.Column="2" Height="28" HorizontalAlignment="Left"  Name="lblEffectiveEndDate" VerticalAlignment="Top" />
                            <DatePicker Height="25" HorizontalAlignment="Left" Grid.Row="3" Grid.Column="4" Name="dtEffectiveEndtDate" VerticalAlignment="Top" Width="120" />
                            <Label Content="Med Pay Available" Grid.Row="4" Grid.Column="2" Height="28" HorizontalAlignment="Left"  Name="lblMedPayAvailable" VerticalAlignment="Top" />
